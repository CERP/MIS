{
	"elixir.projectPath": "./elixir",
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/_build": true,
		"**/deps": true,
		"**/dist": true,
		"**/.cache": true,
		"typescript/**": true
	},
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/**": true,
		"**/bower_components": true,
		"**/_build": true,
		"**/deps": true
	},
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"editor.formatOnSave": true,
	"eslint.workingDirectories": [
		"./web",
		"./dashboard"
	],
	"[typescriptreact]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	}
}